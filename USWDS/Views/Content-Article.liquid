{% zone "Header" %}
<!-- Page Header -->

  <header class="masthead">

    <div id="blog" class="bg-primary-darker usa-content font-serif-lg padding-y-6">
      <div class="grid-container">
        <h1 class="text-normal text-white margin-0">{{ Model.ContentItem.DisplayText }}</h1>
        <span class="text-base-lighter display-block padding-top-1 text-light">{{
          Model.ContentItem.Content.Article.Subtitle.Text }}</span>
      </div>
    </div>

  </header>
{% endzone %}

  <div class="usa-section">
    <div class="grid-container">
      <div class="grid-row grid-gap">
        <main class="usa-layout-docs__main desktop:grid-col-9 usa-prose usa-layout-docs" id="main-content">

          {{ Model.Content.HtmlBodyPart | shape_render }}

        </main>
      </div>
    </div>
  </div>


